<% if current_user.admin? || current_user.id == @wiki.user_id %>
    
   <h2>List of current collaborators</h2>
    <% @wiki.collaborators.each do |w| %>
        <div class="collaborators">
            <%= w.email %>
        </div>
    <% end %> 
    
    <h2>Add Collaborator</h2>
    <% User.all.each do |user| %>
        <%= form_for Collaborator.new do |f| %>
            <div class="form=group">
                <%= user.email %>
                <%= f.hidden_field :wiki_id, value: @wiki.id %>
                <%= f.hidden_field :user_id, value: user.id %>
            </div>
            <% if !@wiki.users.include?(user) %>
                <div class="form=group">
                    <%= f.submit "Add as Collaborator", class: 'btn btn-success'%>
                </div>
            <% elsif @wiki.users.include?(user) %>
                <% Collaborator.all.each do |collaborator| %>
                    <div class="form=group">
                        <%= link_to "Remove", collaborator_path(collaborator_id), method: :delete, class: 'btn btn-danger', data:{confirm: 'Are you sure you want to remove this collaborator?'} %>
                    </div>  
                <% end %> 
            <% end %>     
        <% end %>    
    <% end %>
<% end %>